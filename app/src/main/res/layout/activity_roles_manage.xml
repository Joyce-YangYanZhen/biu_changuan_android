<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.mine.roles.RolesManageActivity">
    <include
        android:id="@+id/in_title"
        layout="@layout/title_activity"/>

    <com.noplugins.keepfit.android.customize.ShadowLayout
        android:id="@+id/sl_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sl_borderColor="#CCEDEFF3"
        app:sl_borderWidth="1dp"
        app:sl_dy="2dp"
        app:sl_shadowColor="#143A4E73"
        app:sl_shadowRadius="0dp"
        app:layout_constraintTop_toBottomOf="@+id/in_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/m15"
            android:paddingBottom="@dimen/m15">
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="@dimen/m70"
                android:layout_height="@dimen/m31"
                android:text="@string/tv_username"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/m20"
                style="@style/tv_subtitle"/>
            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m31"
                android:background="@drawable/shape_btn_bg_gray"
                android:layout_toRightOf="@+id/tv_username"
                android:layout_marginRight="@dimen/m20"/>


            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="@dimen/m70"
                android:layout_height="@dimen/m31"
                android:text="@string/tv_phone"
                style="@style/tv_subtitle"
                android:layout_marginLeft="@dimen/m20"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/m20"
                android:layout_below="@+id/tv_username"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/m31"
                android:layout_marginTop="@dimen/m20"
                android:background="@drawable/shape_btn_bg_gray"
                android:layout_toRightOf="@+id/tv_phone"
                android:layout_marginRight="@dimen/m20"
                android:layout_below="@+id/tv_username"/>


            <TextView
                android:id="@+id/tv_roles_select"
                android:layout_width="@dimen/m70"
                android:layout_height="@dimen/m31"
                android:text="@string/tv_roles_select"
                style="@style/tv_subtitle"
                android:layout_marginTop="@dimen/m20"
                android:layout_marginLeft="@dimen/m20"
                android:gravity="center_vertical"
                android:layout_below="@+id/tv_phone"/>
            <TextView
                android:id="@+id/et_role"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/m31"
                android:layout_marginTop="@dimen/m20"
                android:background="@drawable/shape_btn_bg_gray"
                android:layout_toRightOf="@+id/tv_roles_select"
                android:layout_marginRight="@dimen/m20"
                android:layout_toLeftOf="@+id/tv_add"
                android:layout_below="@+id/tv_phone"/>
            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/m47"
                android:layout_height="@dimen/m31"
                android:layout_marginTop="@dimen/m20"
                android:gravity="center"
                android:text="@string/tv_add"
                android:textSize="13sp"
                android:textColor="@color/contents_text"
                android:background="@drawable/shape_btn_bg_yellow"
                android:layout_marginRight="@dimen/m20"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_phone"/>
        </RelativeLayout>
    </com.noplugins.keepfit.android.customize.ShadowLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_boos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_btn_bg_eeccb3"
        app:layout_constraintTop_toBottomOf="@+id/sl_add"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/m20"
        android:layout_marginRight="@dimen/m30"
        android:layout_marginLeft="@dimen/m30"
        android:paddingBottom="@dimen/m7"
        android:paddingTop="@dimen/m7">
        <TextView
            android:id="@+id/tv_boos_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_502B0E"
            android:textSize="15sp"
            tools:text="杨栋"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/m29"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_boos_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_502B0E"
            android:textSize="13sp"
            tools:text="13880583083"
            android:layout_marginLeft="@dimen/m29"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_boos_name"
            android:layout_marginBottom="@dimen/m7"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_502B0E"
            android:textSize="13sp"
            android:text="场馆主"
            android:layout_marginRight="@dimen/m46"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_roles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m10"
        app:layout_constraintTop_toBottomOf="@+id/cl_boos"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>