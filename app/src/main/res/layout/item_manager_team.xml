<?xml version="1.0" encoding="utf-8"?>
<www.linwg.org.lib.LCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/m10"
    android:layout_marginRight="@dimen/m10"
    android:orientation="vertical"
    app:cornerRadius="@dimen/m8">

    <RelativeLayout
        android:id="@+id/rl_jump"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_time_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/m10"
            android:layout_marginTop="@dimen/m10"
            android:textColor="@color/color_4A4A4A"
            android:textSize="13sp"
            tool:text="2019-09-11" />

        <TextView
            android:id="@+id/tv_time_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/m20"
            android:layout_marginTop="@dimen/m10"
            android:layout_toRightOf="@+id/tv_time_day"
            android:textColor="@color/color_4A4A4A"
            android:textSize="13sp"
            tool:text="周三" />

        <TextView
            android:id="@+id/tv_time_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/m20"
            android:layout_marginTop="@dimen/m10"
            android:layout_toLeftOf="@+id/tv_item"
            android:layout_toRightOf="@+id/tv_time_week"
            android:textColor="@color/color_4A4A4A"
            android:textSize="13sp"
            tool:text="11:30-12:10" />

        <TextView
            android:id="@+id/tv_item"
            android:layout_width="@dimen/m59"
            android:layout_height="@dimen/m24"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/m10"
            android:layout_marginRight="@dimen/m10"
            android:background="@drawable/shape_btn_bg_22243d_40"
            android:gravity="center"
            android:text="已上架"
            android:textColor="@color/color_F9CE0F"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_cg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time_day"
            android:layout_marginLeft="@dimen/m10"
            android:layout_marginTop="@dimen/m20"
            android:textColor="@color/color_4A4A4A"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="gone"
            tool:text="X-part SportTeam" />

        <FrameLayout
            android:id="@+id/rl_rep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cg_name"
            android:layout_marginLeft="@dimen/m10"
            android:layout_marginTop="@dimen/m10">

            <TextView
                android:id="@+id/tv_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/color_4A4A4A"
                android:textSize="13sp"
                tool:text="共感单车·山地骑行" />

            <TextView
                android:id="@+id/tv_team_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/m20"
                android:textColor="@color/color_4A4A4A"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="visible"
                tool:text="¥213" />

            <TextView
                android:id="@+id/tv_team_date_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/m20"
                android:textColor="@color/color_4A4A4A"
                android:textSize="13sp"
                android:visibility="gone"
                tool:text="45min" />
        </FrameLayout>


        <LinearLayout
            android:id="@+id/ll_rep"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m24"
            android:layout_below="@+id/rl_rep"
            android:layout_marginLeft="@dimen/m10"
            android:layout_marginTop="@dimen/m10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_team_time"
                android:layout_width="@dimen/m54"
                android:layout_height="@dimen/m24"
                android:background="@drawable/shape_btn_bg_gray_40"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="13sp"
                tool:text="第2周" />

            <TextView
                android:id="@+id/tv_team_tips"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/m24"
                android:layout_marginLeft="@dimen/m15"
                android:gravity="center"
                android:textColor="@color/color_4A4A4A"
                android:textSize="13sp"
                tool:text="循环四周：每周一" />

            <TextView
                android:id="@+id/tv_team_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m24"
                android:layout_marginRight="@dimen/m20"
                android:gravity="center_vertical|right"
                android:textColor="@color/color_4A4A4A"
                android:textSize="13sp"
                tool:text="45min" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m24"
            android:layout_below="@+id/ll_rep"
            android:layout_margin="@dimen/m10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/m17"
                android:layout_height="@dimen/m22"
                android:src="@drawable/icon_room" />

            <TextView
                android:id="@+id/tv_team_room"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/m24"
                android:layout_marginLeft="@dimen/m10"
                android:gravity="center"
                android:textColor="@color/color_4A4A4A"
                android:textSize="13sp"
                tool:text="动感单车房" />

            <TextView
                android:id="@+id/tv_team_man"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/m24"
                android:layout_marginLeft="@dimen/m10"
                android:gravity="center"
                android:textColor="@color/color_4A4A4A"
                android:textSize="13sp"
                tool:text="15人" />

            <FrameLayout
                android:id="@+id/fl_rep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginRight="@dimen/m10">

                <TextView
                    android:id="@+id/tv_agin"
                    android:layout_width="@dimen/m72"
                    android:layout_height="@dimen/m24"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/chongxin"
                    android:gravity="center"
                    android:text="重新申请"
                    android:textColor="@color/color_181818"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </FrameLayout>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/ll_yaoqin_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m46"
            android:layout_below="@+id/ll_bottom"
            android:background="@drawable/btn_shape_stroke"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_yaoqin_edit"
                android:layout_width="@dimen/m86"
                android:layout_height="@dimen/m28"
                android:layout_gravity="center"
                android:background="@drawable/shape_btn_bg_yellow"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/color_22243D"
                android:textSize="13sp" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_shenqin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m46"
            android:layout_below="@+id/ll_bottom"
            android:background="@drawable/btn_shape_stroke"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_jujue"
                    android:layout_width="@dimen/m58"
                    android:layout_height="@dimen/m28"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_btn_bg_yellow"
                    android:gravity="center"
                    android:text="拒绝"
                    android:textColor="@color/color_22243D"
                    android:textSize="13sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_jieshou"
                    android:layout_width="@dimen/m58"
                    android:layout_height="@dimen/m28"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_btn_bg_yellow"
                    android:gravity="center"
                    android:text="接受"
                    android:textColor="@color/color_22243D"
                    android:textSize="13sp" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</www.linwg.org.lib.LCardView>