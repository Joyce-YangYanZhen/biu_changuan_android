<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <com.noplugins.keepfit.android.customize.ShadowLayout
        android:id="@+id/sl_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sl_borderColor="#CCEDEFF3"
        app:sl_borderWidth="1dp"
        app:sl_dy="2dp"
        app:sl_shadowColor="#143A4E73"
        app:sl_shadowRadius="0dp"
        android:layout_marginLeft="@dimen/m30"
        android:layout_marginRight="@dimen/m30"
        app:layout_constraintTop_toBottomOf="@+id/in_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/m15"
            android:paddingBottom="@dimen/m15">
            <TextView
                android:id="@+id/label_add_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="添加权限"
                android:gravity="center"
                android:textColor="@color/color_4A4A4A"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/m10"
                android:layout_marginBottom="@dimen/m15"/>
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="@dimen/m70"
                android:layout_height="@dimen/m31"
                android:text="@string/tv_username"
                android:gravity="center_vertical"
                android:layout_below="@+id/label_add_role"
                android:layout_marginLeft="@dimen/m20"
                style="@style/tv_subtitle"/>
            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m31"
                android:background="@drawable/shape_btn_bg_gray"
                android:layout_below="@+id/label_add_role"
                android:layout_toRightOf="@+id/tv_username"
                android:layout_marginRight="@dimen/m20"/>


            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="@dimen/m70"
                android:layout_height="@dimen/m31"
                android:text="@string/tv_phone"
                style="@style/tv_subtitle"
                android:layout_marginLeft="@dimen/m20"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/m20"
                android:layout_below="@+id/tv_username"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/m31"
                android:layout_marginTop="@dimen/m20"
                android:background="@drawable/shape_btn_bg_gray"
                android:layout_toRightOf="@+id/tv_phone"
                android:layout_marginRight="@dimen/m20"
                android:layout_below="@+id/tv_username"/>


            <TextView
                android:id="@+id/tv_roles_select"
                android:layout_width="@dimen/m70"
                android:layout_height="@dimen/m31"
                android:text="@string/tv_roles_select"
                style="@style/tv_subtitle"
                android:layout_marginTop="@dimen/m20"
                android:layout_marginLeft="@dimen/m20"
                android:gravity="center_vertical"
                android:layout_below="@+id/tv_phone"/>
            <TextView
                android:id="@+id/et_role"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m31"
                android:layout_marginTop="@dimen/m20"
                android:background="@drawable/shape_btn_bg_gray"
                android:layout_toRightOf="@+id/tv_roles_select"
                android:layout_marginRight="@dimen/m20"
                android:layout_below="@+id/tv_phone"/>
            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/m120"
                android:layout_height="@dimen/m31"
                android:layout_marginTop="@dimen/m20"
                android:gravity="center"
                android:text="@string/tv_add"
                android:textSize="13sp"
                android:textColor="@color/contents_text"
                android:background="@drawable/shape_btn_bg_yellow"
                android:layout_marginRight="@dimen/m15"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_roles_select"/>
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/m120"
                android:layout_height="@dimen/m31"
                android:layout_marginTop="@dimen/m20"
                android:gravity="center"
                android:text="@string/cancel"
                android:textSize="13sp"
                android:textColor="@color/contents_text"
                android:background="@drawable/shape_btn_bg_gray"
                android:layout_marginLeft="@dimen/m15"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_roles_select"/>
        </RelativeLayout>
    </com.noplugins.keepfit.android.customize.ShadowLayout>

</LinearLayout>