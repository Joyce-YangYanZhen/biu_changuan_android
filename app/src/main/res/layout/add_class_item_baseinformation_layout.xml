<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <www.linwg.org.lib.LCardView
        android:id="@+id/clander_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:cornerRadius="@dimen/m8"
        app:shadowSize="@dimen/m2"
        app:shadowStartAlpha="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/m20"
            android:layout_marginRight="@dimen/m20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/m10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv67"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/select_tuanke_type_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m31"
                    android:layout_marginLeft="@dimen/m10"
                    android:background="@drawable/edit_bg1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/select_tuanke_type_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m31"
                        android:background="@drawable/edit_bg1"
                        android:gravity="center_vertical"
                        android:hint="@string/tv167"
                        android:paddingLeft="@dimen/m20"
                        android:singleLine="true"
                        android:textColor="@color/top_heiziti"
                        android:textColorHint="@color/color_9B9B9B"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="@dimen/m20"
                        android:layout_height="@dimen/m20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/m20"
                        android:src="@drawable/icon_drop" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv66"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edit_class_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m31"
                    android:layout_marginLeft="@dimen/m10"
                    android:background="@drawable/edit_bg1"
                    android:hint="@string/edit_hint21"
                    android:maxLength="15"
                    android:paddingLeft="@dimen/m20"
                    android:singleLine="true"
                    android:textColor="@color/top_heiziti"
                    android:textColorHint="@color/color_9B9B9B"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv81"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edit_price_number"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/m31"
                    android:layout_marginLeft="@dimen/m10"
                    android:layout_weight="1"
                    android:background="@drawable/edit_bg1"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:maxLength="15"
                    android:paddingLeft="@dimen/m20"
                    android:singleLine="true"
                    android:textColor="@color/top_heiziti"
                    android:textColorHint="@color/color_9B9B9B"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m10"
                    android:text="@string/tv168"
                    android:textColor="#ff4a4a4a"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv68"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/select_class_target_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m31"
                    android:layout_marginLeft="@dimen/m10"
                    android:background="@drawable/edit_bg1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/select_class_target_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m31"
                        android:background="@drawable/edit_bg1"
                        android:gravity="center_vertical"
                        android:hint="@string/tv167"
                        android:paddingLeft="@dimen/m20"
                        android:singleLine="true"
                        android:textColor="@color/top_heiziti"
                        android:textColorHint="@color/color_9B9B9B"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="@dimen/m20"
                        android:layout_height="@dimen/m20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/m20"
                        android:src="@drawable/icon_drop" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/m10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv69"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/select_class_difficulty_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m31"
                    android:layout_marginLeft="@dimen/m10"
                    android:background="@drawable/edit_bg1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/select_class_difficulty_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m31"
                        android:background="@drawable/edit_bg1"
                        android:gravity="center_vertical"
                        android:hint="@string/tv167"
                        android:paddingLeft="@dimen/m20"
                        android:singleLine="true"
                        android:textColor="@color/top_heiziti"
                        android:textColorHint="@color/color_9B9B9B"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="@dimen/m20"
                        android:layout_height="@dimen/m20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/m20"
                        android:src="@drawable/icon_drop" />

                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv72"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/select_date_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m31"
                    android:layout_marginLeft="@dimen/m10"
                    android:background="@drawable/edit_bg1"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/year_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/m20"
                        android:hint=""
                        android:textColor="@color/top_heiziti"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="@dimen/m10"
                        android:layout_height="@dimen/m0.5"
                        android:layout_marginLeft="@dimen/m1"
                        android:layout_marginRight="@dimen/m1"
                        android:background="@color/color_4A4A4A"
                        android:orientation="vertical" />

                    <TextView
                        android:id="@+id/month_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:textColor="@color/top_heiziti"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="@dimen/m10"
                        android:layout_height="@dimen/m0.5"
                        android:layout_marginLeft="@dimen/m1"
                        android:layout_marginRight="@dimen/m1"
                        android:background="@color/color_4A4A4A"
                        android:orientation="vertical" />

                    <TextView
                        android:id="@+id/date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:textColor="@color/top_heiziti"
                        android:textSize="15sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv72"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp"
                    android:visibility="invisible" />

                <LinearLayout
                    android:id="@+id/ll_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m31"
                    android:layout_marginLeft="@dimen/m10"
                    android:background="@drawable/edit_bg1"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/time1_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/m20"
                        android:gravity="center"
                        android:hint="00:00"
                        android:textColor="@color/top_heiziti"
                        android:textColorHint="@color/color_9B9B9B"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="@dimen/m40"
                        android:layout_height="@dimen/m0.5"
                        android:background="@color/color_4A4A4A" />

                    <TextView
                        android:id="@+id/time2_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="24:00"
                        android:textColor="@color/top_heiziti"
                        android:textColorHint="@color/color_9B9B9B"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/m31"
                android:layout_marginTop="@dimen/m10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv166"
                    android:textColor="@color/top_heiziti"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/jisuan_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m30"
                    android:text="0h"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv70"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/select_room_type_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m31"
                    android:layout_marginLeft="@dimen/m10"
                    android:background="@drawable/edit_bg1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/select_room_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m31"
                        android:background="@drawable/edit_bg1"
                        android:gravity="center_vertical"
                        android:hint="@string/tv169"
                        android:paddingLeft="@dimen/m20"
                        android:singleLine="true"
                        android:textColor="@color/top_heiziti"
                        android:textColorHint="@color/color_9B9B9B"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="@dimen/m20"
                        android:layout_height="@dimen/m20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/m20"
                        android:src="@drawable/icon_drop" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv70"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp"
                    android:visibility="invisible" />

                <RelativeLayout
                    android:id="@+id/select_room_name_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m31"
                    android:layout_marginLeft="@dimen/m10"
                    android:background="@drawable/edit_bg1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/select_room_name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m31"
                        android:background="@drawable/edit_bg1"
                        android:gravity="center_vertical"
                        android:hint="@string/tv170"
                        android:paddingLeft="@dimen/m20"
                        android:singleLine="true"
                        android:textColor="@color/top_heiziti"
                        android:textColorHint="@color/color_9B9B9B"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="@dimen/m20"
                        android:layout_height="@dimen/m20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/m20"
                        android:src="@drawable/icon_drop" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv71"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/edit_tuanke_renshu_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m15"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:text="0人"
                    android:textColor="@color/top_heiziti"
                    android:textColorHint="@color/color_9B9B9B"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m10"
                android:layout_marginBottom="@dimen/m10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv73"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/select_xunhuan_type_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m31"
                    android:layout_marginLeft="@dimen/m10"
                    android:background="@drawable/edit_bg1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/select_xunhuan_type_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m31"
                        android:background="@drawable/edit_bg1"
                        android:gravity="center_vertical"
                        android:hint="@string/tv167"
                        android:paddingLeft="@dimen/m20"
                        android:singleLine="true"
                        android:textColor="@color/top_heiziti"
                        android:textColorHint="@color/color_9B9B9B"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="@dimen/m20"
                        android:layout_height="@dimen/m20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/m20"
                        android:src="@drawable/icon_drop" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </www.linwg.org.lib.LCardView>

</LinearLayout>