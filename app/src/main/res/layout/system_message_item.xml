<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:layout_height="75dp">

    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/m20"
        android:src="@drawable/tanhao_icon"
        android:layout_gravity="center_vertical"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信转出"
                    android:textColor="@color/top_heiziti"
                    android:textSize="@dimen/sp15" />
                <TextView
                    android:id="@+id/content_tv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="发现新版本......"
                    android:textColor="@color/color_bbbbbb"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/m15"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019.07.05 18:30"
                    android:textColor="@color/color_bbbbbb"
                    android:textSize="@dimen/sp12" />
                <LinearLayout
                    android:id="@+id/message_layout"
                    android:layout_width="@dimen/m20"
                    android:background="@drawable/circle_bg"
                    android:layout_marginTop="@dimen/m10"
                    android:layout_gravity="right|bottom"
                    android:gravity="center"
                    android:layout_height="@dimen/m20">
                    <TextView
                        android:id="@+id/message_count"
                        android:layout_width="wrap_content"
                        android:text="99+"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp11"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_marginLeft="6dp"
            android:background="@color/color_F8F8F8"
            android:layout_height="1dp"/>
    </RelativeLayout>


</LinearLayout>