<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.UserPermissionSelectActivity">
    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="28dp"
        android:layout_height="@dimen/m18"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/m20"
        android:layout_marginTop="57dp"
        android:src="@drawable/icon_back" />

    <TextView
        android:layout_below="@+id/back_btn"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m15"
        android:layout_marginLeft="@dimen/m40"
        android:text="@string/tv7"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="30sp" />

    <RelativeLayout
        android:id="@+id/guanzhu_btn"
        android:layout_marginTop="@dimen/m25"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_width="375dp"
        android:background="@drawable/boss"
        android:layout_height="225dp">
        <LinearLayout
            android:id="@+id/guanzhu_enter"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="114dp"
            android:layout_marginLeft="34dp"
            android:gravity="center"
            android:background="@drawable/juxing"
            android:layout_height="@dimen/m50">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp20"
                    android:layout_gravity="center_vertical"
                    android:text="@string/tv8"
                    />
                <ImageView
                    android:layout_width="@dimen/m16"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/m16"
                    android:src="@drawable/you_jiantou"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/guanzhu_btn"
        android:layout_marginTop="@dimen/m9"
        android:layout_centerHorizontal="true"
        android:layout_width="375dp"
        android:background="@drawable/yuangong"
        android:layout_height="225dp">
        <LinearLayout
            android:id="@+id/yuangong_btn"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="114dp"
            android:layout_marginLeft="34dp"
            android:gravity="center"
            android:background="@drawable/juxing_wukuang"
            android:layout_height="@dimen/m50">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/top_heiziti"
                    android:textSize="@dimen/sp20"
                    android:layout_gravity="center_vertical"
                    android:text="@string/tv9"
                    />
                <ImageView
                    android:layout_width="@dimen/m16"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/m16"
                    android:src="@drawable/black_right_jiantou"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>