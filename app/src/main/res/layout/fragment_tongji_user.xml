<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/m180"
                android:layout_margin="@dimen/m10"
                app:cardCornerRadius="@dimen/m10"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:id="@+id/rl_user_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/m10"
                    android:layout_marginRight="@dimen/m10">

                    <TextView
                        android:id="@+id/tv_user_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/contents_text"
                        android:text="用户健身时间分布占比"/>

                    <TextView
                        android:id="@+id/tv_user_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/contents_text"
                        android:layout_toRightOf="@+id/tv_user_time"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="进馆总人数：无数据"/>
                    <TextView
                        android:id="@+id/tv_time_null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="暂无数据"
                        android:layout_centerInParent="true"
                        android:textColor="@color/contents_text"
                        android:gravity="center"/>
                    <!--树状图-->
                    <com.noplugins.keepfit.android.util.ui.BarVerticalChart
                        android:layout_below="@+id/tv_user_sum"
                        android:id="@+id/chart_user_time"
                        android:layout_width="match_parent"
                        android:layout_height="250dip"
                        android:background="#ffffff"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/m10"
                        android:visibility="gone"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/m180"
                android:layout_margin="@dimen/m10"
                app:cardCornerRadius="@dimen/m10"
                app:cardBackgroundColor="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/m10"
                    android:layout_marginRight="@dimen/m10">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/contents_text"
                        android:text="进馆用户男女比例"/>
                    <TextView
                        android:id="@+id/tv_ratio_null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="暂无数据"
                        android:layout_centerInParent="true"
                        android:textColor="@color/contents_text"
                        android:gravity="center"/>
                    <!--饼状图1-->
                    <com.openxu.cview.chart.piechart.PieChartLayout
                        android:id="@+id/chart_ratio"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m120"
                        android:layout_centerVertical="true"
                        android:paddingRight="@dimen/m10"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <com.openxu.cview.chart.piechart.PieChart
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                        <com.openxu.cview.chart.piechart.PieChartLableView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2" />
                    </com.openxu.cview.chart.piechart.PieChartLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/m180"
                android:layout_margin="@dimen/m10"
                app:cardCornerRadius="@dimen/m10"
                app:cardBackgroundColor="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/m10"
                    android:layout_marginRight="@dimen/m10">
                    <TextView
                        android:id="@+id/tv_user_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/contents_text"
                        android:text="用户年龄结构分布（过去30天）"/>

                    <TextView
                        android:id="@+id/tv_age_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/contents_text"
                        android:layout_toRightOf="@+id/tv_user_age"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="进馆总人数：暂无数据"/>

                    <TextView
                        android:id="@+id/tv_age_null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="暂无数据"
                        android:layout_centerInParent="true"
                        android:textColor="@color/contents_text"
                        android:gravity="center"/>
                    <!--树状图-->
                    <com.noplugins.keepfit.android.util.ui.BarVerticalChart
                        android:layout_below="@+id/tv_user_age"
                        android:id="@+id/chart_user_age"
                        android:layout_width="match_parent"
                        android:layout_height="250dip"
                        android:background="#ffffff"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/m10"
                        android:visibility="gone"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>