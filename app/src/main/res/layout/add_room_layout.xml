<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/m31"
        android:layout_marginTop="@dimen/m20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/m0"
            android:layout_height="@dimen/m31"
            android:layout_marginRight="@dimen/m20"
            android:layout_weight="1"
            android:background="@drawable/edit_bg2">

            <TextView
                android:id="@+id/room_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/m20"
                android:text="单车房-双子座"
                android:textColor="@color/color_584903"
                android:textSize="@dimen/sp15" />

            <TextView
                android:id="@+id/people_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/m22"
                android:text="50人"
                android:textColor="@color/color_584903"
                android:textSize="@dimen/sp15" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/remove_img"
            android:layout_width="@dimen/m15"
            android:layout_height="@dimen/m15"
            android:src="@drawable/deleted_edit" />

    </LinearLayout>
</LinearLayout>