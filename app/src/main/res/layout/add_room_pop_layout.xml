<?xml version="1.0" encoding="utf-8"?>

<www.linwg.org.lib.LCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clander_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/m284"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/m20"
    android:layout_marginRight="@dimen/m20"
    android:gravity="center"
    android:orientation="vertical"
    app:cornerRadius="@dimen/m8"
    app:shadowSize="@dimen/m2"
    app:shadowStartAlpha="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/top_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/m10"
            android:text="添加场馆房间"
            android:textColor="@color/color_4A4A4A"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_tv"
            android:layout_marginTop="@dimen/m15"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/select_room_type_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m31"
                android:layout_marginLeft="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                android:background="@drawable/edit_bg1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/select_room_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m31"
                    android:background="@drawable/edit_bg1"
                    android:gravity="center_vertical"
                    android:hint="房间类型"
                    android:paddingLeft="@dimen/m20"
                    android:singleLine="true"
                    android:textColor="@color/top_heiziti"
                    android:textColorHint="@color/color_9B9B9B"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="@dimen/m20"
                    android:layout_height="@dimen/m20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/m20"
                    android:src="@drawable/icon_drop" />

            </RelativeLayout>

            <EditText
                android:id="@+id/room_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m31"
                android:layout_marginLeft="@dimen/m20"
                android:layout_marginTop="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                android:background="@drawable/edit_bg1"
                android:gravity="left|center_vertical"
                android:hint="@string/edit_hint47"
                android:maxLength="10"
                android:paddingLeft="@dimen/m20"
                android:singleLine="true"
                android:textColor="@color/top_heiziti"
                android:textColorHint="@color/color_929292"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/room_people_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m31"
                android:layout_marginLeft="@dimen/m20"
                android:layout_marginTop="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                android:background="@drawable/edit_bg1"
                android:gravity="left|center_vertical"
                android:hint="@string/edit_hint48"
                android:inputType="number"
                android:paddingLeft="@dimen/m20"
                android:singleLine="true"
                android:textColor="@color/top_heiziti"
                android:textColorHint="@color/color_929292"
                android:textSize="15sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/m10"
            android:layout_marginRight="@dimen/m10"
            android:layout_marginBottom="@dimen/m20">

            <LinearLayout
                android:id="@+id/cancel_layout"
                android:layout_width="@dimen/m110"
                android:layout_height="@dimen/m35"
                android:layout_alignParentLeft="true"
                android:background="@drawable/shape_cancel_btn_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sure_layout"
                android:layout_width="@dimen/m110"
                android:layout_height="@dimen/m35"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_sure_btn_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_ok"
                    android:textColor="@color/contents_text"
                    android:textSize="18sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</www.linwg.org.lib.LCardView>


