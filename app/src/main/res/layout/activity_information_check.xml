<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.InformationCheckActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/daohanglan"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="28dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv18"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="19dp"
            android:textSize="25sp"
            android:textColor="@color/top_heiziti"
            />
    </RelativeLayout>
    <com.noplugins.keepfit.android.util.ui.StepView
        android:id="@+id/sv"
        android:paddingTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <com.noplugins.keepfit.android.util.ui.NoScrollViewPager
        android:id="@+id/viewpager_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>