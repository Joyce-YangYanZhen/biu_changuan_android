<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/color_F8F8F8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="455dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/jujue_bg1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/close_btn_ico" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="29dp"
            android:text="@string/tv96"
            android:textColor="@color/top_heiziti"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv54"
                    android:textColor="@color/color_6D7278"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/edit_class_name"
                    android:layout_width="265dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/kapian_shurukuang"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="瑜伽"
                    android:singleLine="true"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv55"
                    android:textColor="@color/color_6D7278"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="265dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/kapian_shurukuang"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="tony老师"
                    android:singleLine="true"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv56"
                    android:textColor="@color/color_6D7278"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="265dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/kapian_shurukuang"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="有氧草房"
                    android:singleLine="true"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv57"
                    android:textColor="@color/color_6D7278"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="265dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/kapian_shurukuang"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="40/人"
                    android:singleLine="true"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv58"
                    android:textColor="@color/color_6D7278"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="265dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/kapian_shurukuang"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="40人"
                    android:singleLine="true"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv60"
                    android:textColor="@color/color_6D7278"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="课程介绍课程介绍课程介绍课程介绍课程介绍课程介绍"
                    android:singleLine="true"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv61"
                    android:textColor="@color/color_6D7278"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="注意事项注意事项注意事项注意事项注意事项注意事项"
                    android:singleLine="true"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/submit_layout_center"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/jujue_btn"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:background="@drawable/jujue_bg"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv90"
                android:textColor="@color/top_heiziti"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/agree_btn"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:layout_marginLeft="73dp"
            android:background="@drawable/agree_bg"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv91"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>