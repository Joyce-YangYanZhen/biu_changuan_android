<?xml version="1.0" encoding="utf-8"?><!-- 动态添加布局时一定要在外层加RelativeLayout，否则layout属性无效-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/tv_save_1"
            android:layout_width="@dimen/m66"
            android:layout_height="@dimen/m27"
            style="@style/tv_subtitle"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_margin="@dimen/m10"
            android:textStyle="bold"
            android:background="@drawable/shape_venue_save"
            android:text="@string/tv_save"/>
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/label_cg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                style="@style/tv_label"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/tv_venue_name"
                android:layout_marginTop="@dimen/m20"/>

            <TextView
                android:id="@+id/tv_cg_name"
                style="@style/tv_subtitle"
                android:layout_width="@dimen/m0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m20"
                android:layout_marginTop="@dimen/m20"
                android:layout_marginEnd="@dimen/m20"
                android:text="123"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/label_cg_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/label_cg_name"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_cg_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                style="@style/tv_label"
                android:gravity="center"
                android:text="@string/tv_venue_type"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_cg_name"
                android:layout_marginTop="@dimen/m20"/>

            <TextView
                android:id="@+id/tv_cg_type"
                style="@style/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m20"
                android:layout_marginTop="@dimen/m20"
                android:text="123"
                app:layout_constraintLeft_toRightOf="@+id/label_cg_type"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/label_cg_type"
                app:layout_constraintTop_toBottomOf="@+id/tv_cg_name" />

            <TextView
                android:id="@+id/label_cg_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                style="@style/tv_label"
                android:gravity="center"
                android:text="@string/tv_venue_area"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_cg_type"
                android:layout_marginTop="@dimen/m20"/>

            <TextView
                android:id="@+id/tv_cg_area"
                style="@style/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m20"
                android:layout_marginTop="@dimen/m20"
                android:text="123"
                app:layout_constraintLeft_toRightOf="@+id/label_cg_area"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/label_cg_area"
                app:layout_constraintTop_toBottomOf="@+id/tv_cg_type" />

            <TextView
                android:id="@+id/label_cg_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                style="@style/tv_label"
                android:gravity="center"
                android:text="@string/tv_venue_address"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_cg_area"
                android:layout_marginTop="@dimen/m20"/>

            <TextView
                android:id="@+id/tv_cg_address"
                style="@style/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m20"
                android:layout_marginTop="@dimen/m20"
                android:text="123"
                app:layout_constraintLeft_toRightOf="@+id/label_cg_address"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/label_cg_address"
                app:layout_constraintTop_toBottomOf="@+id/tv_cg_area" />
            <!--营业时间-->
            <TextView
                android:id="@+id/label_business_hours"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/m32"
                android:layout_marginStart="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                style="@style/tv_label"
                android:gravity="center"
                android:text="@string/tv_business_hours"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_cg_address"
                android:layout_marginTop="@dimen/m20"/>

            <TextView
                android:id="@+id/tv_business_hours"
                style="@style/tv_subtitle"
                android:layout_width="@dimen/m0"
                android:layout_height="@dimen/m32"
                android:layout_marginStart="@dimen/m20"
                android:layout_marginTop="@dimen/m20"
                android:layout_marginEnd="@dimen/m20"
                android:background="@drawable/shape_btn_bg_gray"
                android:drawableRight="@drawable/icon_xiala"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/m20"
                android:paddingRight="@dimen/m6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/label_business_hours"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/label_business_hours"
                app:layout_constraintTop_toBottomOf="@+id/tv_cg_address" />

            <!--联系方式-->
            <TextView
                android:id="@+id/label_contact_phone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/m32"
                android:layout_marginStart="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                style="@style/tv_label"
                android:gravity="center"
                android:text="@string/tv_contact_phone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_business_hours"
                android:layout_marginTop="@dimen/m20"/>

            <EditText
                android:id="@+id/tv_contact_phone"
                style="@style/tv_subtitle"
                android:layout_width="@dimen/m0"
                android:layout_height="@dimen/m32"
                android:layout_marginStart="@dimen/m20"
                android:layout_marginTop="@dimen/m20"
                android:layout_marginEnd="@dimen/m20"
                android:background="@drawable/shape_edit_bg"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:maxLength="11"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/label_contact_phone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/label_contact_phone"
                app:layout_constraintTop_toBottomOf="@+id/tv_business_hours"
                 />

            <!--联系邮箱-->
            <TextView
                android:id="@+id/label_contact_email"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/m32"
                android:layout_marginStart="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                style="@style/tv_label"
                android:gravity="center"
                android:text="@string/tv_contact_email"
                android:inputType="textEmailAddress"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_contact_phone"
                android:layout_marginTop="@dimen/m20"/>

            <EditText
                android:id="@+id/tv_contact_email"
                style="@style/tv_subtitle"
                android:layout_width="@dimen/m0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m20"
                android:layout_marginTop="@dimen/m20"
                android:layout_marginEnd="@dimen/m20"
                android:background="@drawable/shape_edit_bg"
                android:minHeight="@dimen/m32"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/label_contact_phone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/label_contact_email"
                app:layout_constraintTop_toBottomOf="@+id/tv_contact_phone"
                 />
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/m80"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_contact_email"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
       </ScrollView>
    </LinearLayout>
</RelativeLayout>
