<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/m10"
    android:orientation="vertical">

    <www.linwg.org.lib.LCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/m15"
        android:layout_marginRight="@dimen/m15"
        android:gravity="center"
        android:orientation="vertical"
        app:cornerRadius="@dimen/m8"
        app:shadowSize="@dimen/m2"
        app:shadowStartAlpha="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m109">

            <LinearLayout
                android:id="@+id/layout_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m15"
                android:layout_marginTop="@dimen/m10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/m20"
                    android:layout_height="@dimen/m20"
                    android:src="@drawable/coach" />

                <TextView
                    android:id="@+id/coach_name"
                    android:layout_width="@dimen/m100"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m10"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="教练-张晗"
                    android:textColor="#ff4a4a4a"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/phone_btn"
                    android:layout_width="@dimen/m16"
                    android:layout_height="@dimen/m16"
                    android:layout_marginLeft="@dimen/m10"
                    android:src="@drawable/call" />

                <TextView
                    android:id="@+id/status1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="@dimen/m84"
                    android:text="已签"
                    android:textColor="#ff929292"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_top"
                android:layout_marginLeft="@dimen/m15"
                android:layout_marginTop="@dimen/m10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/type_icon_bg"
                    android:layout_width="@dimen/m23"
                    android:layout_height="@dimen/m23"
                    android:background="@drawable/zi_bg"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/type_icon_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/phone_or_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m15"
                    android:text="11/20人"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/phone_img"
                    android:layout_width="@dimen/m16"
                    android:layout_height="@dimen/m16"
                    android:layout_marginLeft="@dimen/m10"
                    android:src="@drawable/phone_img"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="@dimen/m84"
                    android:text="已签"
                    android:textColor="#ff929292"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/m15"
                android:layout_marginBottom="@dimen/m10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30-13:30"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/class_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m30"
                    android:text="减脂塑形"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m44"
                    android:text="¥ 39"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="13sp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/status_img"
                android:layout_width="@dimen/m16"
                android:layout_height="@dimen/m39"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/m4"
                android:src="@drawable/weikaishi_icon" />
        </RelativeLayout>
    </www.linwg.org.lib.LCardView>

</LinearLayout>