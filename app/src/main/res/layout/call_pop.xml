<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/rizhi_pop_bg"
        android:layout_margin="@dimen/m30"
            android:layout_height="@dimen/m118">

        <TextView
            android:id="@+id/content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/top_heiziti"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/m24"
                android:layout_gravity="center_horizontal"
                android:text="确认拨打（021）67254325？"
                android:textStyle="bold"
                />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/m22"
                android:layout_marginLeft="@dimen/m44"
                android:layout_marginRight="@dimen/m44"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/cancel_layout"
                    android:layout_width="@dimen/m86"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:background="@drawable/shape_btn_bg_gray"
                    android:layout_height="@dimen/m30">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="@string/cancel"
                        android:textSize="15sp"
                        android:textColor="@color/color_4A4A4A"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/sure_layout"
                    android:layout_width="@dimen/m86"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:background="@drawable/shape_btn_bg_yellow"
                    android:layout_height="@dimen/m30">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="@string/tv148"
                        android:textSize="15sp"
                        android:textColor="@color/contents_text"
                        />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>