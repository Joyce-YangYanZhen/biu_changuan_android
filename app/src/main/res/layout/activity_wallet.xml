<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F8F8F8">
    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/daohanglan">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="28dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp"
            android:text="@string/tv_qianbao"
            android:textColor="@color/top_heiziti"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/m150"
        android:layout_marginTop="@dimen/m10"
        android:background="@drawable/user_bg_top">
        <TextView
            android:id="@+id/tv_yue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:drawableLeft="@drawable/item_icon1"
            android:layout_marginTop="@dimen/m10"
            android:textColor="@color/color_70000000"
            android:text=" 余额"/>
        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_yue"
            android:textColor="@color/top_heiziti"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/m10"
            android:text="¥ 100000.00"/>
        <TextView
            android:id="@+id/tv_sum_withdraw"
            android:layout_width="wrap_content"
            android:textColor="@color/color_70000000"
            android:layout_height="wrap_content"
            android:text="累计提现 ¥20.00"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/m20"
            android:layout_marginBottom="@dimen/m5"
            android:layout_above="@+id/tv_now_withdraw"
            android:layout_toLeftOf="@+id/tv_withdraw"/>
        <TextView
            android:id="@+id/tv_now_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_70000000"
            android:text="当前可提现 ¥10000.00"
            android:layout_toLeftOf="@+id/tv_withdraw"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/m20"
            android:layout_marginBottom="@dimen/m10"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/tv_withdraw"
            android:layout_width="@dimen/m100"
            android:textColor="@color/white"
            android:layout_height="@dimen/m35"
            android:layout_marginRight="@dimen/m20"
            android:text="@string/tv_now_tixian"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/m10"
            android:background="@drawable/tv_bg_yellow"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_money_details"
        android:layout_width="match_parent"
        android:background="@drawable/user_item_bg"
        android:layout_height="68dp">
        <ImageView
            android:id="@+id/image1"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/item_icon1"
            />
        <TextView
            android:layout_toRightOf="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textColor="@color/top_heiziti"
            android:text="@string/tv_money_details"
            />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="27dp"
            android:src="@drawable/youjiantou"
            />
    </RelativeLayout>
</LinearLayout>