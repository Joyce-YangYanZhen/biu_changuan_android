<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clipToPadding="true"
        android:fitsSystemWindows="true">

        <ImageView
            android:layout_width="118dp"
            android:layout_height="81dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="88dp"
            android:src="@drawable/login_icon" />

        <TextView
            android:id="@+id/register_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="101dp"
            android:layout_marginRight="31dp"
            android:text="@string/register"
            android:textColor="@color/color_9B9B9B"
            android:textSize="@dimen/m18" />

        <LinearLayout
            android:id="@+id/center"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="201dp"
            android:layout_marginRight="31dp"
            android:background="@drawable/login_kuang"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m17"
                android:layout_marginTop="48dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/m21"
                    android:layout_height="@dimen/m21"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_number" />

                <EditText
                    android:id="@+id/edit_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/m5"
                    android:background="@null"
                    android:hint="@string/edit_hint1"
                    android:layout_marginRight="@dimen/m25"
                    android:inputType="textNoSuggestions|text|textCapCharacters"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/color_ACACAC"
                    android:textColorHint="@color/color_ACACAC"
                    android:textSize="@dimen/m18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m17"
                android:layout_marginTop="41dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/m20"
                    android:layout_height="@dimen/m23"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_password" />

                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/m5"
                    android:background="@null"
                    android:hint="@string/edit_hint2"
                    android:inputType="textPassword"
                    android:password="true"
                    android:layout_marginRight="@dimen/m25"
                    android:singleLine="true"
                    android:textColor="@color/color_ACACAC"
                    android:textColorHint="@color/color_ACACAC"
                    android:textSize="@dimen/m18" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m27"
                android:layout_marginTop="49dp">

                <LinearLayout
                    android:id="@+id/checkbox_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/m0"
                    android:layout_marginLeft="@dimen/m0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/xieyi_check_btn"
                        android:layout_width="@dimen/m10"
                        android:layout_height="@dimen/m10"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/selector_btn_checkbox"
                        android:button="@null"
                        android:checked="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/m4"
                        android:text="@string/edit_hint3"
                        android:textColor="@color/color_898989" />

                </LinearLayout>

                <TextView
                    android:id="@+id/forget_password_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/m4"
                    android:layout_marginRight="@dimen/m30"
                    android:text="@string/edit_hint4"
                    android:textColor="@color/color_898989" />

            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/login_btn"
            android:layout_width="225dp"
            android:layout_height="63dp"
            android:layout_below="@+id/center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:background="@drawable/login_btn"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tv1"
                android:textColor="@color/white"
                android:textSize="@dimen/m18" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>