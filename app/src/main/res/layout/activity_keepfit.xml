<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:monkey="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/id_container"
        android:background="@color/white"
        android:layout_height="match_parent">

    <com.noplugins.keepfit.android.util.ui.NoScrollViewPager
        android:id="@+id/viewpager_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/m50"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/home_img"
                android:layout_width="@dimen/m21"
                android:layout_height="@dimen/m21"
                android:src="@drawable/icon_home_on" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m2"
                android:text="日程"
                android:textColor="@color/color_4A4A4A"
                android:textSize="9sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_shipu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shipu_img"
                android:layout_width="@dimen/m21"
                android:layout_height="@dimen/m21"
                android:layout_gravity="center"
                android:src="@drawable/icon_discover_off" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m2"
                android:text="运营"
                android:textColor="@color/color_4A4A4A"
                android:textSize="9sp" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/btn_movie"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/movie_img"
                    android:layout_width="@dimen/m21"
                    android:layout_height="@dimen/m21"
                    android:src="@drawable/icon_issue_off" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m2"
                    android:text="消息"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="9sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/message_view"
                android:layout_width="@dimen/m20"
                android:layout_height="@dimen/m20"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/m12"
                android:background="@drawable/circle_bg"
                android:gravity="center">

                <TextView
                    android:id="@+id/message_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99+"
                    android:textColor="@color/white"
                    android:textSize="11sp" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/btn_mine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mine_img"
                android:layout_width="@dimen/m21"
                android:layout_height="@dimen/m21"
                android:layout_gravity="center"
                android:src="@drawable/icon_user_off" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m2"
                android:text="我的"
                android:textColor="@color/color_4A4A4A"
                android:textSize="9sp" />

        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>

</LinearLayout>
