<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:monkey="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:layout_height="75dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/touxiang_image"
        android:layout_width="@dimen/m50"
        android:layout_height="@dimen/m50"
        android:layout_marginLeft="@dimen/m20"
        android:layout_gravity="center_vertical"
        android:src="@drawable/touxiang"
        app:civ_border_color="@android:color/transparent"
        app:civ_border_width="@dimen/m0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/m6"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/user_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息类型"
                    android:textColor="@color/top_heiziti"
                    android:textSize="@dimen/sp15" />
                <TextView
                    android:id="@+id/content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m9"
                    tools:text="发现新版本.发现新版本发现新版本发."
                    android:textColor="@color/color_bbbbbb"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/m15"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019.07.05 18:30"
                    android:textColor="@color/color_bbbbbb"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:layout_marginTop="@dimen/m10"
                    android:layout_gravity="right|bottom"
                    android:gravity="center"
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:text="-3000000"
                    android:textColor="@color/bottom_color"
                    android:textSize="@dimen/sp11"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/m6"
            android:background="@color/color_F8F8F8"
            android:layout_height="@dimen/m1"/>
    </RelativeLayout>


</LinearLayout>