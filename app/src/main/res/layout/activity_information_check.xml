<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.InformationCheckActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/m100">
        <ImageView
            android:id="@+id/back_btn_img"
            android:layout_width="28dp"
            android:layout_height="@dimen/m18"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/m30"
            android:layout_marginLeft="@dimen/m20"
            android:src="@drawable/icon_back" />
        <TextView
            android:id="@+id/top_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv18"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/m19"
            android:textSize="@dimen/sp25"
            android:textColor="@color/top_heiziti"
            />
    </RelativeLayout>
    <com.noplugins.keepfit.android.util.ui.StepView
        android:id="@+id/sv"
        android:paddingTop="@dimen/m6"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m40"/>
    <com.noplugins.keepfit.android.util.ui.NoScrollViewPager
        android:id="@+id/viewpager_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>