<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/m10"
    android:orientation="vertical">

    <www.linwg.org.lib.LCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/m15"
        android:layout_marginRight="@dimen/m15"
        android:gravity="center"
        android:orientation="vertical"
        app:cornerRadius="@dimen/m8"
        app:shadowSize="@dimen/m2"
        app:shadowStartAlpha="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/m15"
                android:layout_marginTop="@dimen/m10"
                android:text="12:30-13:30"
                android:textColor="@color/color_777777"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/status_layout"
                android:layout_width="@dimen/m56"
                android:layout_height="@dimen/m19"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/m10"
                android:layout_marginRight="@dimen/m16"
                android:background="@drawable/shape_jinxingzhong_icon"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/status_tv_right_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进行中"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_tv"
                android:layout_marginTop="@dimen/m10">

                <TextView
                    android:id="@+id/class_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/m15"
                    android:text="减脂塑形"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/m16"
                    android:text="¥ 39"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel1"
                android:layout_marginTop="@dimen/m10">

                <TextView
                    android:id="@+id/tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/m15"
                    android:text="@string/tv165"
                    android:textColor="#ff4a4a4a"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/coach_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/m10"
                    android:layout_toEndOf="@+id/tv_left"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="张晗"
                    android:textColor="#ff4a4a4a"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/phone_btn"
                    android:layout_width="@dimen/m25"
                    android:layout_height="@dimen/m25"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/m10"
                    android:layout_toEndOf="@+id/coach_name"
                    android:src="@drawable/call" />

                <TextView
                    android:id="@+id/status1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/m26"
                    android:text="已签"
                    android:textColor="#ff929292"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel2"
                android:layout_marginBottom="@dimen/m10"
                android:layout_marginTop="@dimen/m10">

                <LinearLayout
                    android:id="@+id/type_icon_bg"
                    android:layout_width="@dimen/m23"
                    android:layout_height="@dimen/m23"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/m15"
                    android:layout_centerVertical="true"
                    android:background="@drawable/zi_bg"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/type_icon_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/phone_or_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/m15"
                    android:layout_toEndOf="@+id/type_icon_bg"
                    android:text="11/20人"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_toEndOf="@+id/phone_or_name_tv"
                    android:id="@+id/phone_img"
                    android:layout_width="@dimen/m25"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/m25"
                    android:layout_marginLeft="@dimen/m20"
                    android:src="@drawable/call"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="已签"
                    android:textColor="#ff929292"
                    android:layout_marginRight="@dimen/m26"
                    android:textSize="13sp" />
            </RelativeLayout>
        </RelativeLayout>
    </www.linwg.org.lib.LCardView>
</LinearLayout>