<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="141dp"
    android:background="@drawable/bg5"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/touxiang_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@drawable/touxiang"
            app:civ_border_color="#ffffff"
            app:civ_border_width="0dp" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jane erry"
            android:textColor="@color/top_heiziti"
            android:textSize="16sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
        
        <TextView
            android:layout_width="228dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/tv_bg"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="4dp"
            android:maxLines="2"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/top_heiziti"
            android:text="拳击|拳击|拳击|拳击|拳击|拳击|拳击|拳击|拳击|拳击|拳击|拳击|拳击|拳击|拳击|拳击|拳击|拳击|拳击|"
            android:layout_height="61dp" />
        <LinearLayout
            android:id="@+id/yaoqing_btn"
            android:layout_width="228dp"
            android:layout_height="34dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_huang"
            android:gravity="center">

            <TextView
                android:id="@+id/yaoqing_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已邀请"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>