<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F8F8F8"
    tools:context=".activity.ZhangHaoSafeActivity">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/daohanglan">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="28dp"
            android:layout_height="@dimen/m18"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/m20"
            android:layout_marginBottom="30dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/m19"
            android:text="@string/tv114"
            android:textColor="@color/top_heiziti"
            android:textSize="@dimen/sp25"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_below="@+id/rel1"
        android:layout_marginTop="@dimen/m21"
        android:background="@drawable/user_item_bg">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/m20"
            android:text="@string/tv115"
            android:textColor="@color/top_heiziti"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/phone_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/m20"
            android:layout_toRightOf="@+id/tv1"
            android:text="197***29922"
            android:textColor="@color/top_heiziti"
            android:textSize="@dimen/sp15" />



        <LinearLayout
            android:id="@+id/jujue_btn"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/m15"
            android:background="@drawable/jujue_bg"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv116"
                android:textColor="@color/color_6D7278"
                android:textSize="@dimen/sp13"
                android:textStyle="normal" />
        </LinearLayout>

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/exit_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="209dp"
        android:layout_height="54dp"
        android:layout_marginBottom="@dimen/m20"
        android:background="@drawable/jujue_bg"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv117"
            android:textColor="@color/color_6D7278"
            android:textSize="@dimen/sp25"
            android:textStyle="normal" />
    </LinearLayout>

</RelativeLayout>