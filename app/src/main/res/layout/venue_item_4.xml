<?xml version="1.0" encoding="utf-8"?><!-- 动态添加布局时一定要在外层加RelativeLayout，否则layout属性无效-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/m20">
        <TextView
            android:id="@+id/label_company_bank_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.3"
            style="@style/tv_label"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/tv_company_bank_number"
            android:layout_marginTop="@dimen/m20"/>
        <TextView
            android:id="@+id/tv_company_bank_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/tv_subtitle"
            app:layout_constraintWidth_percent="0.85"
            android:text="123"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_company_bank_number"
            android:layout_marginTop="@dimen/m10"/>



        <TextView
            android:id="@+id/label_company_bank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.23"
            style="@style/tv_label"
            android:gravity="center"
            android:text="@string/tv_company_bank"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_company_bank_number"
            android:layout_marginTop="@dimen/m20"/>
        <TextView
            android:id="@+id/tv_company_bank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/tv_subtitle"
            app:layout_constraintWidth_percent="0.85"
            android:text="123"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_company_bank"
            android:layout_marginTop="@dimen/m10"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
